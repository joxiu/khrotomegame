## The game starts here.
label start:
    ## Show buttons
    show screen aff_button
    show screen phone_button
    
    ## Show bg picture and play bg sound on loop
    scene bg black with fade
    play music "music/ComicallyRomantic.mp3" loop
    
    ## Input Heroine's name
    $ h_fname = renpy.input("What is your first name?")
    $ h_fname = h_fname.strip()
    if h_fname == "":
        $ h_fname = "Milena"
        
    $ h_lname = renpy.input("What is your last name?")
    $ h_lname = h_lname.strip()
    if h_lname == "":
        $ h_lname = "Garcia"
        
    $ h_fullname = h_lname + " " + h_fname
    $ h = DynamicCharacter("h_fname", color="#F5A9BC")
    
    ## PROLOGUE
    jump prologue